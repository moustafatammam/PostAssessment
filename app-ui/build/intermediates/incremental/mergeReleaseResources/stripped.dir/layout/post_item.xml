<?xml version="1.0" encoding="utf-8"?>

                                                              
                                                  
                                                        
    
                 
                           
                                                                        
           
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="375dp"
        android:layout_height="108dp"
        app:mode="same_level"
        app:dragEdge="right" android:tag="layout/post_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/delete_post_button"
                android:layout_width="64dp"
                android:layout_height="107dp"
                android:background="@drawable/ic_edit_24px"/>
            <Button
                android:id="@+id/edit_post_button"
                android:layout_width="64dp"
                android:layout_height="107dp"
                android:background="@drawable/ic_clear_all_24px"/>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/post_title"
                android:layout_width="156dp"
                android:layout_height="19dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="203dp"
                android:layout_marginBottom="68dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:tag="binding_1"         
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="title" />

            <TextView
                android:id="@+id/post_body"
                android:layout_width="277dp"
                android:layout_height="14dp"
                android:layout_marginTop="6dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:alpha=".4"
                android:tag="binding_2"        
                app:layout_constraintStart_toStartOf="@+id/post_title"
                app:layout_constraintTop_toBottomOf="@+id/post_title"
                tools:text="body a long body just to test the view " />

            <ImageView
                android:id="@+id/item_list_handle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="42dp"
                android:layout_marginStart="351dp"
                android:src="@drawable/ic_list_handle_24px"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>

         